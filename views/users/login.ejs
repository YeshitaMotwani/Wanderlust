<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1>Login on Wanderlust</h1>
    <div class="col-8 offset-3">
      <form method="POST" action="/login" class="needs-validation" novalidate>
        <div class="mb-3">
          <input name="username" placeholder="Enter username" type="text" class="form-control" required />
          <div class="valid-feedback">Username looks good!</div>
          <div class="invalid-feedback">Please enter a valid username</div>
          <br /><br />
          
          <input name="password" placeholder="Enter password" type="password" class="form-control" required />
          <br /><br />
        </div>
        <button class="btn btn-outline-success">Login</button>