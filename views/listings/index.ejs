<% layout("/layouts/boilerplate") %>
<%=success%>
<body>
  <style>

  </style>
  <div class="filters">
    <div class="filter">
      <div>
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-city"></i>
        <p>Iconic cities</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-mountain"></i>
        <p>Mountains</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-hotel"></i>
        <p>Castle</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-person-swimming"></i>
        <p>Amazing pools</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-regular fa-campground"></i>
        <p>Camping</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-regular fa-cow"></i>
        <p>Farms</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-regular fa-snowflake"></i>
        <p>Arctic</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-landmark-dome"></i>
        <p>Domes</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-regular fa-ship"></i>
        <p>Boats</p>
      </div>
    </div>
    </div>
  </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let listing of allListings) { %>
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card listing-card">
          <img src="<%= listing.image.url %>" alt="listing_image" class="card-img-top card-overlay-img" style="height:20rem">
          <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="card-text">&#8377;<%= listing.price.toLocaleString("en-IN") %></p>
          </div>
        </div>
      </a>
    <% } %>
  </div>
</body>

